@model NaturalWebDesigns.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
<section class="container g-pt-100 g-pb-40">
    <div class="row justify-content-between">
        <div class="col-lg-7 g-mb-60">
            <h2 class="h3">Contact us</h2>
            <p class="g-color-gray-dark-v3 g-font-size-16">A balance of the new with the old, Nature never fails and Technology never ceases to Evolve.</p>

            <hr class="g-my-40">

            <div class="col-md-6 col-lg-4 d-flex g-theme-bg-black-v1 g-pa-40">
                <div class="align-self-center w-100">
                    <div class="u-heading-v8-2 g-mb-60">
                        <h2 class="h1 text-uppercase u-heading-v8__title g-font-weight-700 g-font-size-26 g-color-white g-mb-30">
                            Have a <span class="g-color-primary">Send your questions</span>
                        </h2>
                    </div>
                    @using (Html.BeginForm("ContactAsync", "Home", new { @class = "form-inline" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group g-mb-20">
                            @Html.LabelFor(m => m.FromName, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })

                            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 rounded-3 g-py-13 g-px-15" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                        <div class="form-group g-mb-20">
                            @Html.LabelFor(m => m.FromEmail, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })

                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 rounded-3 g-py-13 g-px-15" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>

                        <div class="form-group g-mb-20">
                            @Html.LabelFor(m => m.Message, new { @class = "control-label g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })

                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 g-resize-none rounded-3 g-py-13 g-px-15", rows = "7" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-lg u-btn-primary g-font-weight-600 g-font-size-default rounded-3 text-uppercase g-py-15 g-px-30" value="Send Enquiry" />
                        </div>
                    }
                </div>
            </div>
            <!-- End Contact Form -->
        </div>

        <div class="col-lg-4 g-mb-60">
            <!-- Google Map -->
            <div id="GMapCustomized-light" class="js-g-map embed-responsive embed-responsive-21by9 g-height-300" data-type="custom" data-lat="40.674" data-lng="-73.946" data-zoom="12" data-title="Agency" data-styles='[["", "", [{"saturation":-100},{"lightness":51},{"visibility":"simplified"}]], ["", "labels", [{"visibility":"on"}]], ["water", "", [{"color":"#bac6cb"}]] ]'
                 data-pin="true" data-pin-icon="~/Theme/assets/img/icons/pin/green.png">
            </div>
            <!-- End Google Map -->

            <hr class="g-my-40">

            <!-- Contact Info -->
            <h2 class="h3 mb-4">Contact info</h2>
            <div class="media mb-2">
                <i class="d-flex g-color-gray-dark-v5 mt-1 mr-3 icon-hotel-restaurant-235 u-line-icon-pro"></i>
                <div class="media-body">
                    <p class="g-color-gray-dark-v3 mb-2">
                        <br>Calgary, Alberta,
                        <br>Canada
                    </p>
                </div>
            </div>
            <div class="media mb-2">
                <i class="d-flex g-color-gray-dark-v5 mt-1 mr-3 icon-communication-062 u-line-icon-pro"></i>
                <div class="media-body">
                    <p class="g-color-gray-dark-v3 mb-2">
                        Email: <a class="g-color-gray-dark-v4" href="admin@naturalwebdesigns.com">admin@naturalwebdesigns.com</a>
                    </p>
                </div>
            </div>
            <div class="media mb-2">
                <i class="d-flex g-color-gray-dark-v5 mt-1 mr-3 icon-communication-033 u-line-icon-pro"></i>
                <div class="media-body">
                    <p class="g-color-gray-dark-v3">
                        Call: <span class="g-color-gray-dark-v4">+1 403 815 6866</span>
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>



